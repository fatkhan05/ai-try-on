# AI Try-On Fashion Studio Configuration

# Application Settings
NEXT_PUBLIC_APP_NAME="AI Fashion Studio"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_APP_DESCRIPTION="Virtual Try-On Experience untuk Fashion Business"

# API Configuration
NEXT_PUBLIC_AI_API_ENDPOINT="/api/ai-tryon"
NEXT_PUBLIC_API_TIMEOUT=30000

# AI Model Configuration
AI_MODEL_VERSION="v2.1.0"
AI_PROCESSING_TIMEOUT=30000
MAX_IMAGE_SIZE=5242880
SUPPORTED_IMAGE_FORMATS="image/jpeg,image/png,image/webp"

# Camera Configuration
CAMERA_DEFAULT_WIDTH=1280
CAMERA_DEFAULT_HEIGHT=720
CAMERA_FRAME_RATE=30
CAMERA_FACING_MODE="user"

# Kiosk Mode Settings
KIOSK_MODE=true
KIOSK_IDLE_TIMEOUT=300000
KIOSK_AUTO_RESET=true
TOUCH_TARGET_MIN_SIZE=44

# Business Configuration
BUSINESS_NAME="Fashion Studio"
BUSINESS_PHONE="+62-XXX-XXXX-XXXX"
BUSINESS_EMAIL="info@fashionstudio.com"
BUSINESS_ADDRESS="Jl. Fashion No. 123, Jakarta"

# Fabric Pricing (per meter in Rupiah)
FABRIC_COTTON_PRICE=150000
FABRIC_SILK_PRICE=350000
FABRIC_LINEN_PRICE=200000
FABRIC_WOOL_PRICE=300000
FABRIC_DENIM_PRICE=180000
FABRIC_VELVET_PRICE=400000

# Development Settings
NODE_ENV=development
NEXT_PUBLIC_ENABLE_MOCK_AI=true
NEXT_PUBLIC_ENABLE_DEBUG=true
NEXT_PUBLIC_SHOW_PERFORMANCE_METRICS=true

# Analytics & Monitoring (optional)
# NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=""
# SENTRY_DSN=""
# NEXT_PUBLIC_HOTJAR_ID=""

# External AI Services (untuk implementasi production)
# OPENAI_API_KEY=""
# REPLICATE_API_TOKEN=""
# HUGGINGFACE_API_KEY=""
# CUSTOM_AI_ENDPOINT=""
# CUSTOM_AI_API_KEY=""

# Database (jika diperlukan untuk menyimpan hasil)
# DATABASE_URL=""
# MONGODB_URI=""
# REDIS_URL=""

# Storage (untuk menyimpan gambar hasil try-on)
# AWS_ACCESS_KEY_ID=""
# AWS_SECRET_ACCESS_KEY=""
# AWS_S3_BUCKET=""
# AWS_REGION=""
# CLOUDINARY_URL=""

# Security
